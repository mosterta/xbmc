TARGET=Textures.xbt
TARGET_CURIAL=curial.xbt

all: $(TARGET) $(TARGET_CURIAL)

.PHONY: force

compress_texture=
ifeq (@USE_ALLWINNER_GLES@, 1)
compress_texture=-use_none
endif

ifeq (@USE_ALLWINNER_DISP@, 1)
compress_texture=-use_none
endif

$(TARGET):
	@TEXTUREPACKER@ -dupecheck -input . -output $(TARGET)

$(TARGET_CURIAL):
	@TEXTUREPACKER@ -dupecheck $(compress_texture) -input ../themes/curial -output $(TARGET_CURIAL)

$(TARGET_FLAT):
	@TEXTUREPACKER@ -dupecheck $(compress_texture) -input ../themes/flat -output $(TARGET_FLAT)

clean:
	rm -f $(TARGET)
	rm -f $(TARGET_CURIAL)

distclean: clean
